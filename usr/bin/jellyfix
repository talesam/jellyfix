#!/bin/sh
# Wrapper para executar jellyfix

# Detecta o diretório de instalação
SCRIPT_DIR="$(dirname "$(readlink -f "$0")")"
JELLYFIX_DIR="$SCRIPT_DIR/../share/jellyfix"

# Se estiver instalado no sistema
if [ ! -d "$JELLYFIX_DIR" ]; then
    JELLYFIX_DIR="/usr/share/jellyfix"
fi

# Executa o main.py usando Python do sistema (não pyenv)
exec /usr/bin/python3 "$JELLYFIX_DIR/main.py" "$@"
